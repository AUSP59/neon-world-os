{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CMake options introspection",
  "type": "object",
  "required": [
    "count",
    "options"
  ],
  "properties": {
    "count": {
      "type": "integer",
      "minimum": 0
    },
    "options": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "default": {
            "type": [
              "string",
              "null"
            ]
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": true
}