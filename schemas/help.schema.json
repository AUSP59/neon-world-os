{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "NEON help-json schema",
  "type": "object",
  "required": [
    "name",
    "options"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "version": {
      "type": [
        "string",
        "number"
      ]
    },
    "options": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "flag"
        ],
        "properties": {
          "flag": {
            "type": "string"
          },
          "arg": {
            "type": "string"
          },
          "desc": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": true
}